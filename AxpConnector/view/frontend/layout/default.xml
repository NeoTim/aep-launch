<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.additional">
            <block class="Magento\Framework\View\Element\Template" name="axpconnector_launch_head_script" before="-" template="Adobe_AxpConnector::launch_head.phtml" ifconfig="axpconnector_backend_config/general/enable">
                <arguments>
                    <argument name="view_model" xsi:type="object">
                        Adobe\AxpConnector\ViewModel\Js
                    </argument>
                </arguments>
            </block>
        </referenceBlock>

        <referenceContainer name="after.body.start">
            <block class="Magento\Framework\View\Element\Template"
                   name="axpconnector_private_content_block"
                   template="Adobe_AxpConnector::private_content_datalayer.phtml"
                   ifconfig="axpconnector_backend_config/general/enable">
                <arguments>
                    <argument name="view_model" xsi:type="object">
                        Adobe\AxpConnector\ViewModel\Js
                    </argument>
                </arguments>
            </block>

            <block class="Adobe\AxpConnector\Block\Page"
                   name="axpconnector_page_block"
                   ifconfig="axpconnector_backend_config/general/enable"
            >
                <arguments>
                    <argument name="view_model" xsi:type="object">
                        Adobe\AxpConnector\ViewModel\Js
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template"
                   name="axp_connector_datalayer"
                   template="Adobe_AxpConnector::datalayer.phtml"
                   ifconfig="axpconnector_backend_config/general/enable"
            >
                <arguments>
                    <argument name="view_model" xsi:type="object">
                        Adobe\AxpConnector\ViewModel\Js
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>